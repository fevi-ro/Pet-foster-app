<h2>Create a pet</h2>

<form action="/pets/create" method="POST">

  <label> Name:
    <input type="text" name="name" required />
  </label>

  <label> Animal:
    <select name="animal">
      {{#each animals}}
        <option >{{this}}</option>
      {{/each}}
    </select>
 </label>

  <label> gender:
    <input type="text" name="gender" required />
  </label>

  <label> Description:
    <textarea name="description"> </textarea>
  </label>

  <label> dateOfBirth:
    <textarea name="dateOfBirth"> </textarea>
  </label>

  <label> healthIssues:
    <textarea name="healthIssues"> </textarea>
  </label>

  <button type="submit"> Create </button>
</form>
