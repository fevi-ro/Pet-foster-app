<main class="wrapper">
  {{!-- <h2>Signup</h2> --}}
<section class="signup-form">
  {{#if errorMessage}}
  <p class="error">
    {{errorMessage}}
  </p>
  {{/if}}



<div class="form-for-signup">
  <form action="/signup" method="POST" style="border:1px solid #ccc">
    <div class="signup">
      <h1>Sign Up</h1>
      <p>Please fill in this form to create an account.</p>
      <hr>

      <label for="email"><b>Email</b></label>
      <input type="text" name="email" placeholder="rockstar@ironhack.com" required>

      <label for="pasword"><b>Password</b></label>
      <input type="password" name="password" placeholder="********" required>

      <label for="psw-repeat"><b>Repeat Password</b></label>
      <input type="password" placeholder="Repeat Password" name="psw-repeat" required>

      <label for="name"><b>Name</b></label>
      <input type="string" name="name" placeholder="Alice Jones" required>

      <label for="location"><b>City</b></label>
      <input type="string" name="location" placeholder="Berlin" required>

      <label for="psw-repeat"><b>Animal rescue team or shelter</b></label>
      <input type="string" name="team" placeholder="Happy Paws Berlin" required>



      <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

      <div class="clearfix">
   
        <button type="submit" class="signupbtn">Create account</button>
      </div>
    </div>
  </form>
  </div>
  </section>
</main>